{
  "name": "kickapp",
  "version": "2.0.1",
  "main": "src/main.js",
  "description": "The Kick Desktop App",
  "author": "IPEXA",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipexadev/Kick-App.git"
  },
  "build": {
    "appId": "dev.ipexa.kick.desktop",
    "productName": "Kick Desktop",
    "copyright": "Copyright Â© 2023 ${author}",
    "icon": "assets/icons/app_icon.png",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ipexadev",
        "repo": "kick-app"
      }
    ]
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "generateyml": "node src/generate-version-yml.js",
    "fullbuild": "node src/generate-version-yml.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.1.3",
    "electron-updater": "^5.3.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^15.0.0",
    "electron-builder": "^22.14.13",
    "electron-packager": "^17.1.1"
  }
}
